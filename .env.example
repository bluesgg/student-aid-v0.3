# =============================================================================
# StudentAid Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local to version control

# === Supabase Configuration ===
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# === OpenAI Configuration ===
OPENAI_API_KEY=sk-your-openai-api-key

# === Vercel KV (Redis for Rate Limiting) ===
KV_REST_API_URL=https://your-redis.upstash.io
KV_REST_API_TOKEN=your-upstash-token
KV_REST_API_READ_ONLY_TOKEN=your-upstash-readonly-token

# === Sentry (Error Monitoring) ===
NEXT_PUBLIC_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
SENTRY_AUTH_TOKEN=sntrys_xxx
SENTRY_ORG=your-org
SENTRY_PROJECT=studentaid

# === Application Configuration ===
NEXT_PUBLIC_APP_URL=http://localhost:3000

# === Feature Flags ===
# Enable sliding window mode for auto-explain feature
# Set to 'true' to enable, 'false' to disable
# Development: true (enable for testing)
# Production: false initially, then gradual rollout
ENABLE_AUTO_EXPLAIN_WINDOW=true

# Enable debug logging for PDF viewer components
# Set to 'true' to enable verbose console.log output for debugging
# Development: true (enable for debugging)
# Production: false (disable for performance)
NEXT_PUBLIC_DEBUG_PDF_VIEWER=false

# Enable click-to-explain auto image detection in PDF viewer
# When enabled, users can click on detected images to get AI explanations
# Development: true (enable for testing)
# Production: false initially, then gradual rollout
ENABLE_AUTO_IMAGE_DETECTION=true

# === Environment-Specific Supabase Projects ===
# Development (uncomment for local development)
# NEXT_PUBLIC_SUPABASE_URL=https://xxx-dev.supabase.co
# SUPABASE_SERVICE_ROLE_KEY=your-dev-service-key

# Staging (uncomment for staging environment)
# NEXT_PUBLIC_SUPABASE_URL=https://xxx-staging.supabase.co
# SUPABASE_SERVICE_ROLE_KEY=your-staging-service-key

# Production (uncomment for production environment)
# NEXT_PUBLIC_SUPABASE_URL=https://xxx-prod.supabase.co
# SUPABASE_SERVICE_ROLE_KEY=your-prod-service-key
